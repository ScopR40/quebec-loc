{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs{% endblock %}

{% block body %}
   <div class="container-fluid">
      <h1 class="my-5">Administration des utilisateurs</h1>

      <table class="table table-hover">
         <thead>
            <tr>
               <th>Id</th>
               <th>Utilisateur</th>
               <th>Introduction</th>
               <th>Description</th>
               <th></th>
            </tr>
         </thead>
         <tbody>
            {% for user in pagination.data %}
            <tr>
               <th>{{user.id}}</th>
               <th><img src="{{user.picture}}" alt="" class="avatar avatar-medium"><br/>{{user.fullName}}</th>
               <th>{{user.introduction}}</th>
               <th>{{user.description | raw}}</th>
               <th>
                  <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-primary">
                     <i class="fas fa-pen"></i>
                  </a>
               </th>
            </tr>
            {% endfor %}
         </tbody>
      </table>


   {{ pagination.display() }}
   </div>

{% endblock %}
